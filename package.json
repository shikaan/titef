{
  "name": "titef",
  "description": "Tiny, zero-dependecies test framework for newbies.",
  "main": "dist/titef.js",
  "scripts": {
    "test:integration": "npm run bin -- ./test",
    "test:unit": "npm run bin -- --extensions test.js ./test",
    "test": "npm run test:unit && npm run test:integration",
    "lint:fix": "npm run lint -- --fix",
    "lint": "eslint ./lib ./test",
    "build:cli": "parcel build -t node -d bin -o titef.js --no-source-maps --experimental-scope-hoisting ./lib/cli/index.js",
    "build:lib": "parcel build -t node -d dist -o titef.js --no-source-maps --experimental-scope-hoisting ./lib/index.js",
    "build": "npm run build:cli && npm run build:lib",
    "prepush": "npm run lint:fix",
    "bin": "node ./bin/titef.js",
    "bin:debug": "node --inspect-brk ./lib/cli/index.js"
  },
  "types": "dist/types.d.ts",
  "author": "Manuel Spagnolo <spagnolo.manu@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^0.14.3",
    "mock-fs": "^4.11.0",
    "parcel": "^1.12.4",
    "parcel-plugin-shebang": "^1.2.8"
  },
  "keywords": [
    "javascript",
    "newbies",
    "test",
    "framework",
    "lightweight",
    "mocha",
    "jasmine",
    "karma",
    "jest"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shikaan/titef"
  },
  "bin": {
    "titef": "bin/titef.js"
  },
  "shebang": [
    {
      "interpreter": "node",
      "files": [
        "./lib/cli/index.js"
      ]
    }
  ]
}
